{
  'targets': [
    {
      'target_name': 'binding',
      'defines': [ 'V8_DEPRECATION_WARNINGS=1' ],
      'sources': [ 'binding.cc', 'ql.cc' ],
      'conditions': [
          ['OS=="linux"', {
              'defines': [
                  'QL_NODE_LINUX',
              ]
          }],
          ['OS=="win"', {
              'defines': [
                  'QL_NODE_WIN32',
              ],
              'msvs_settings': {
                  'VCCLCompilerTool': {
                      'ExceptionHandling': 1
                  }
              },
              'link_settings': {
                  'libraries': [
                      "-lgdiplus.lib",
                  ]
              }
          }],
          ['OS=="mac"', {
              'defines': [
                  'QL_NODE_MAC',
              ]
          }]
      ],
      'include_dirs' : [
          '<!(node -e "require(\'nan\')")'
      ]
    }
  ]
}
