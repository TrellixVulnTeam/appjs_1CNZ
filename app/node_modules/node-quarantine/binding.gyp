{
  'targets': [
    {
      'target_name': 'binding',
      'defines': [ 'V8_DEPRECATION_WARNINGS=1' ],
      'conditions': [
          ['OS=="linux"', {
              'sources': [ 'binding.cc' ],
              'defines': [
                  'IMPL_NODE_LINUX',
              ]
          }],
          ['OS=="mac"', {
              'sources': [ 'binding.cc', 'impl_mac.mm' ],
              'defines': [
                  'IMPL_NODE_MAC',
              ]
          }]
      ],
      'include_dirs' : [
          '<!(node -e "require(\'nan\')")'
      ],
      "xcode_settings": {
      "OTHER_CPLUSPLUSFLAGS": ["-std=c++11", "-stdlib=libc++", "-mmacosx-version-min=10.8"],
      "OTHER_LDFLAGS": ["-framework Foundation -framework CoreFoundation -framework IOKit -framework AppKit"]
    }
    }
  ]
}
